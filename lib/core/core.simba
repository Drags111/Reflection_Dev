function R_LoggedIn: Boolean;
var
  LoginIndex: Integer;
begin
  LoginIndex := Client.LoginIndex();
  Result := (LoginIndex = 10) or (LoginIndex = 11);
end;

(*
R_GetMyPos
~~~~~~~~~~

.. code-block:: pascal

    function R_GetMyPos: TTile;

Returns your current tile.

.. note::

  by Benland100

*)
function R_GetMyPos: TTile;
var
  me: Integer;
begin
  me := Client.MyPlayer();
  Result.x := Client.BaseX() + SmartGetFieldInt(me, hook_animable_PixelX) / 512;
  Result.y := Client.BaseY() + SmartGetFieldInt(me, hook_animable_PixelY) / 512;
  R_FreeObject(me);
end;

(*
R_GetMyLocPos
~~~~~~~~~~~~~

.. code-block:: pascal

    function R_GetMyLocPos: TTile;

Returns your local position.

.. note::

  by Benland100

*)
function R_GetMyLocPos: TTile;
var
  me: Integer;
begin
  me := Client.MyPlayer();
  Result.x := (SmartGetFieldInt(me, hook_animable_PixelX) - Client.BaseX()) / 512;
  Result.y := (SmartGetFieldInt(me, hook_animable_PixelY) - Client.BaseY()) / 512;
  R_FreeObject(me);
end;
