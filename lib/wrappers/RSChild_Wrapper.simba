function RSChild_GetText(Obj: Integer): String;
var
  TextObj: Integer;
begin
  try
    TextObj := SmartGetFieldObject(Obj, hook_interface_GetText);
    Result := R_TrimHTML(R_GetJavaString(TextObj, 255));
  finally
    R_FreeObject(TextObj);
  end;
end;

