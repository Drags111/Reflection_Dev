function RSCharacter_GetTile(Obj: Integer): TTile;
var
  BaseX, BaseY: Integer;
begin
  BaseX := SmartGetFieldInt(0, hook_static_BaseX);
  BaseY := SmartGetFieldInt(0, hook_static_BaseY);
  Result.X := BaseX + (SmartGetFieldInt(Obj, hook_animable_PixelX) / 512);
  Result.Y := BaseY + (SmartGetFieldInt(Obj, hook_animable_PixelY) / 512);
end;

