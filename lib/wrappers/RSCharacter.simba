function RSCharacter_GetInCombat(Obj: Integer): Boolean;
var
  LoopCycle: Integer;
begin
  LoopCycle := SmartGetFieldInt(0, hook_static_LoopCycle);
  Result := LoopCycle < RSCharacter_GetLoopCycleStatus(Obj);
end;

